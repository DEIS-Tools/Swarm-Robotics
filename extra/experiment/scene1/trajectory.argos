<?xml version="1.0" ?>

<!-- *************************************************** -->
<!-- * A fully commented XML is diffusion_1.xml. Refer * -->
<!-- * to it to have full information about what       * -->
<!-- * these options mean.                             * -->
<!-- *************************************************** -->

<argos-configuration>


  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0"
                ticks_per_second="10"
                random_seed="127" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <footbot_diffusion_controller id="fdc"
                                  library="build/controllers/libfootbot_diffusion">
      <actuators>
        <differential_steering implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
        <positioning implementation="default"/>
      </sensors>

      <params alpha="7.5" delta="0.1" velocity="20" />   <!--  velocity=5 -->
    </footbot_diffusion_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <!-- <loop_functions library="build/loop_functions/id_loop_functions/libid_loop_functions"
                  label="id_qtuser_functions" /> -->


  <loop_functions library="build/loop_functions/libtrajectory_loop_functions"
                  label="trajectory_loop_functions" />

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="7, 10, 2" center="0,0,0.5">

    <box id="wall_north" size="6.8,0.1,0.5" movable="false">
      <body position="0,4.9,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="6.8,0.1,0.5" movable="false">
      <body position="0,-4.9,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,9.8,0.5" movable="false">
      <body position="3.4,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,9.8,0.5" movable="false">
      <body position="-3.4,0,0" orientation="0,0,0" />
    </box>


    <distribute>
      <position method="grid"
                center="0,4,0"
                distances="0.5,0.5,0"
                layout="5,1,1" />
      <orientation method="constant" values="-45,0,0" />
      <entity quantity="4" max_trials="1">
        <foot-bot id="fb">
          <controller config="fdc" />
        </foot-bot>
      </entity>
    </distribute>

    
    
    <!--
    <foot-bot id="fb">
      <body position = "0,4.15,0" orientation = "-90,0,0"/>
      <controller config = "fdc" />
    </foot-bot>
    -->

    <!--
    <entity> 
      <body position="2,0,0">
      <cylinder id="c" height ="0.5" radius = "0.15" movable="false" >
    </entity>
    -->

    <distribute>
      <position method="grid"
                center="0,0,0"
                distances="3.0,2.5,0"
                layout="1,2,1" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="2" max_trials="1">
        <box id="obstacle" size="1.0,1.0,0.5" movable="false" mass="1.0" />
      </entity>
    </distribute>


    <distribute>
      <position method="grid"
                center="0,0.5,0"
                distances="3.5,2,0"
                layout="2,3,1" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="6" max_trials="1">
        <box id="container" size="0.5,1,0.5" movable="false" />
      </entity>
    </distribute>

    <box id="dropPoint"size="0.5,0.5,0.25" movable="false" >
      <body position="-3,-3.40,0" orientation="0,0,0" />
    </box>

    <box id="container"size="1,0.5,0.25" movable="false" >
      <body position="0,-4.25,0" orientation="0,0,0" />
    </box>

    <box id="obstacle2"size="0.5,0.5,0.25" movable="false" mass="2.1" >
      <body position="1,-2.25,0" orientation="0,0,0" />
    </box>

    <box id="obstacle3"size="0.5,0.5,0.25" movable="false" mass="5.5">
      <body position="-3, 2.25,0" orientation="0,0,0" />
      
    </box>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d"/>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="id_of_led_medium" />
  </media>


  <!-- <media /> -->

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <!--
        This shows how to add customized drawing in the world
        using the qt user functions.
        Check 'argos3 -q qt-opengl' for more help.
    -->
    <qt-opengl autoplay=true>  <!--<qt-opengl autoplay=true>-->

      
      <!-- <user_functions library="build/loop_functions/trajectory_loop_functions/libtrajectory_loop_functions"
                      label="trajectory_qtuser_functions" />   -->

      <user_functions library="build/loop_functions/libtrajectory_loop_functions"
                      label="trajectory_qtuser_functions" />

      <!-- <user_functions library="build/loop_functions/id_loop_functions/libid_loop_functions"
                      label="id_qtuser_functions" /> -->
      <camera>
        <placement idx="0" position="0,0,6.0" look_at="0.1,0,0" />
        <placement idx="1" position="4,0,7" look_at="4,0.1,0.1" />        
        <placement idx="2" position="3,3,4" look_at="1,6,0" />
        <placement idx="3" position="2,3,2" look_at="0,1,0" />
      </camera>
    </qt-opengl>

  </visualization>

</argos-configuration>
