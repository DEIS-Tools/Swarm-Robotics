<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->

  <framework>
    <system threads="0" />
    <experiment length="0"
                ticks_per_second="10"
                random_seed="127" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->

  <controllers>
    <SingleThreadBotGreedy_controller id="fdc"
                                      library="./libBotImplementations">
      <actuators>
        <differential_steering implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
        <positioning implementation="default"/>
      </sensors>
            <params>
        <wheel_turning hard_turn_angle_threshold="90"
                       soft_turn_angle_threshold="70"
                       no_turn_angle_threshold="10"
                       max_speed="10" />
        <flocking target_distance="75"
                  gain="1000"
                  exponent="2" />
      </params>

      <params alpha="7.5" delta="0.1" />
    </SingleThreadBotGreedy_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->

  <loop_functions library="./libCTrajectoryLoopFunctions"
                  label="CTrajectoryLoopFunctions" />

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="24, 60, 2" center="0,0,0.5">
    <box id="wall_north" size="24,0.1,0.5" movable="false">
      <body position="0,30,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="24,0.1,0.5" movable="false">
      <body position="0,-30,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,60,0.5" movable="false">
      <body position="12,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,60,0.5" movable="false">
      <body position="-12,0,0" orientation="0,0,0" />
    </box>

    <!-- ********************************* -->
    <!-- * Distribution of the foot bots * -->
    <!-- ********************************* -->

    <distribute>
      <position method="grid"
                center="0,28,0"
                distances="1,1,0"
                layout="7,3,1" />
      <orientation method="constant" values="-45,0,0" />
      <entity quantity="20" max_trials="1">
        <foot-bot id="fb">
          <controller config="fdc" />
        </foot-bot>
      </entity>
    </distribute>

    <distribute>
      <position method="grid"
                center="0,0,0"
                distances="11,2,0"
                layout="1,26,1" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="26" max_trials="1">
    <box id="obstacle" size="8,1,1" movable="false" >
    </box>
      </entity>
  </distribute>

 

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d"/>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="id_of_led_medium" />
  </media>


  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>

    <qt-opengl autoplay="false">
      <user_functions library="./libCTrajectoryLoopFunctions"
                      label="CTrajectoryQTUserFunctions" />

      <camera>
        <placement idx="0" position="0,0,35.0" look_at="0.1,0,0" />
      </camera>
    </qt-opengl>

  </visualization>

</argos-configuration>